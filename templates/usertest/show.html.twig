{% extends 'base.html.twig' %}

{% block title %}Felhasználó #{{user.id}}{% endblock %}

{% block body %}
    <table class="table table-striped table-hover" id="user">
        <thead>
        <tr>
            <th>#</th>
            <th>Név</th>
            <th>Nem</th>
            <th>Cím</th>
            <th>Rólam</th>
            <th>Aktív-e</th>
            <th>Műveletek</th>
        </tr>
        </thead>
        <tbody>
            {% if user.gender == 1 %}
                {% set genderValue = 'Férfi' %}
            {% elseif user.gender == 0 %}
                {% set genderValue = 'Nő' %}
            {% endif %}

            {% if user.isActive == 1 %}
                {% set isActiveValue = 'Igen' %}
            {% elseif user.isActive == 0 %}
                {% set isActiveValue = 'Nem' %}
            {% endif %}

            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ genderValue }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.aboutMe }}</td>
                <td>{{ isActiveValue }}</td>
                <td>
                    <a href="">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a href="#">
                        <i class="fas fa-trash-alt delete-user" data-id="{{ user.id }}"></i>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}